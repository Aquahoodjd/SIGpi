#!/bin/bash

###
### SIGPI
###
### pkg_dump1090
###

case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove Dump1090"
        echo -e "${SIGPI_BANNER_RESET}"
	
	rm -rf $SIGPI_SOURCE/dump1090
        sudo rm /usr/local/bin/dump1090
	
	# Remove Menu icon
        sudo rm $SIGPI_DESKTOP_ICONS/dump1090.png
        # Remove Desktop links
        sudo rm $SIGPI_DESKTOP_FILES/dump1090.desktop
	
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Dump1090 Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge Dump1090"
        echo -e "${SIGPI_BANNER_RESET}"
	
	rm -rf $SIGPI_SOURCE/dump1090
	
	# Remove Menu icon
        sudo rm $SIGPI_DESKTOP_ICONS/dump1090.png
        # Remove Desktop links
        sudo rm $SIGPI_DESKTOP_FILES/dump1090.desktop
		
        sudo rm /usr/local/bin/dump1090
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Dump1090 Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install Dump1090"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"

        ## DEPENDENCIES

        ## PACKAGE
        cd $SIGPI_SOURCE
        git clone https://github.com/antirez/dump1090.git
        cd dump1090
        make -j4
        sudo cp dump1090 /usr/local/bin/dump1090
	
        ## DESKTOP
	# Add Menu icon
        sudo cp $SIGPI_ICONS/dump1090.png $SIGPI_DESKTOP_ICONS
        # Add Desktop links
        sudo cp $SIGPI_HOME/desktop/dump1090.desktop $SIGPI_DESKTOP_FILES
	# Add SigPi Category installed application ( already done )
        # Add to menu
        xdg-desktop-menu install --novendor --noupdate $DESKTOP_DIRECTORY/SigPi.directory $DESKTOP_FILES/dump1090.desktop

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Dump1090 Installed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac
