#!/bin/bash

###
### SIGPI
###
### pkg_fldigi
###

###
### 20211208-1200  Currently default to install to keep script backward compatible
###

case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove FLdigi"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo apt-get remove fldigi
        
        # Remove Menu icon
        sudo rm $DESKTOP_ICONS/fldigi.png
        sudo rm $DESKTOP_ICONS/flarq.png
        sudo rm $DESKTOP_ICONS/flrig.png
        # Remove Desktop links
        sudo rm $DESKTOP_FILES/fldigi.desktop
        sudo rm $DESKTOP_FILES/flarq.desktop
        sudo rm $DESKTOP_FILES/flrig.desktop

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   FLdigi Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge FLdigi"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo apt-get remove --purge fldigi
        
        # Remove Menu icon
        sudo rm $DESKTOP_ICONS/fldigi.png
        sudo rm $DESKTOP_ICONS/flarq.png
        sudo rm $DESKTOP_ICONS/flrig.png
        # Remove Desktop links
        sudo rm $DESKTOP_FILES/fldigi.desktop
        sudo rm $DESKTOP_FILES/flarq.desktop
        sudo rm $DESKTOP_FILES/flrig.desktop

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   FLdigi Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install FLdigi"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"

        ## DEPENDENCIES

        ## PACKAGE
        cd $SIGPI_SOURCE
        sudo apt-get install -y fldigi

	    # Add Menu icon
        sudo cp $SIGPI_ICONS/fldigi.png $DESKTOP_ICONS
	    sudo cp $SIGPI_ICONS/flarq.png $DESKTOP_ICONS
        # Add Desktop links
        sudo cp $SIGPI_HOME/desktop/fldigi.desktop $DESKTOP_FILES
	    sudo cp $SIGPI_HOME/desktop/flarq.desktop $DESKTOP_FILES
	    # Add SigPi Category installed application
	    sudo sed -i "s/Categories.*/Categories=$SIGPI_MENU_CATEGORY;/" $DESKTOP_FILES/fldigi.desktop
	    sudo sed -i "s/Categories.*/Categories=$SIGPI_MENU_CATEGORY;/" $DESKTOP_FILES/flarq.desktop
        
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   FLdigi Installed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac
