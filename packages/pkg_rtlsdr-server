#!/bin/bash

###
### SIGPI
###
### pkg_rtlsdr-server
###

case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove RTLSDR Service"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo systemctl stop rtlsdr.service
        sleep 5
        sudo systemctl disable rtlsdr.service
        sudo rm -rf /etc/systemd/system/rtlsdr.service

        # Remove Menu icon
        sudo rm $SIGPI_DESKTOP_ICONS/rtltcp-server.png
        # Remove Desktop links
        sudo rm $SIGPI_DESKTOP_FILES/rtltcp-server.desktop

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   RTLSDR Service Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge RTLSDR Service"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo systemctl stop rtlsdr.service
        sleep 5
        sudo systemctl disable rtlsdr.service
        sudo rm -rf /etc/systemd/system/rtlsdr.service

        # Remove Menu icon
        sudo rm $SIGPI_DESKTOP_ICONS/rtltcp-server.png
        # Remove Desktop links
        sudo rm $SIGPI_DESKTOP_FILES/rtltcp-server.desktop
        
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   RTLSDR Service Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install RTLSDR Service"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"

        ## DEPENDENCIES

        ## PACKAGE
        sudo cp $SIGPI_SOURCE/scripts/rtlsdr.service /etc/systemd/system/rtlsdr.service
        sudo systemctl daemon-reload
        sudo systemctl start rtlsdr
        sudo systemctl status rtlsdr
        sudo systemctl enable rtlsdr
        sleep 5
        sudo systemctl status rtlsdr.service
	
        # Add Icon
        sudo cp $SIGPI_ICONS/rtltcp-server.png $SIGPI_DESKTOP_ICONS
        # Add Desktop
        sudo cp $SIGPI_HOME/desktop/rtltcp-server.desktop $SIGPI_DESKTOP_FILES
	    # Change Category
        # Add to Menu
        xdg-desktop-menu install --novendor --noupdate $DESKTOP_DIRECTORY/SigPi.directory $DESKTOP_FILES/rtltcp-server.desktop
        
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   RTLSDR Service Installed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac
