#!/bin/bash

###
### SIGPI
###
### pkg_rtlsdr-server
###

case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove SigPi Server Service"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo systemctl stop sigpi-server.service
        sleep 5
        sudo systemctl disable sigpi-server.service
        sudo rm -rf /etc/systemd/system/sigpi-server.service

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   SigPi Server Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge SigPi Server"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo systemctl stop sigpi-server.service
        sleep 5
        sudo systemctl disable sigpi-server.service
        sudo rm -rf /etc/systemd/system/sigpi-server.service
        
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   SigPi Server Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install SigPi Server  Service"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"

        ## DEPENDENCIES
        sudo apt-get install -y libusb-1.0-0-dev
        sudo pip3 install pyrtlsdr

        # INSTALL
        cd $SIGPI_SOURCE
        git clone https://github.com/osmocom/rtl-sdr.git
        cd rtl-sdr
        mkdir build	&& cd build
        cmake ../ -DINSTALL_UDEV_RULES=ON -DDETACH_KERNEL_DRIVER=ON
        make
        sudo make install
        sudo cp ../rtl-sdr.rules /etc/udev/rules.d/
        sudo ldconfig
        
        sudo cp $SIGPI_SOURCE/scripts/rtlsdr.service /etc/systemd/system/sigpi-server.service
        sudo systemctl daemon-reload
        sudo systemctl start sigpi-server.service
        sudo systemctl enable sigpi-server
        sleep 5
        sudo systemctl status sigpi-server.service
         echo "RTLSDR" >> $SIGPI_CONFIG
	
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   SigPi Server Installed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac
