#!/bin/bash

###
### SIGPI
###
### pkg_gqrx-sdr
###


case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove GQRX"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo apt-get remove gqrx-sdr
        
        ### Remove Menu icon
        sudo rm $DESKTOP_ICONS/gqrx-sdr.png
        ### Remove Desktop links
        sudo rm $DESKTOP_FILES/gqrx-sdr.desktop
        
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   GQRX Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge GQRX"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo apt-get remove --purge gqrx-sdr

        ### Remove Menu icon
        sudo rm $DESKTOP_ICONS/gqrx-sdr.png
        ### Remove Desktop links
        sudo rm $DESKTOP_FILES/gqrx-sdr.desktop
        
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   GQRX Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install GQRX"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"

        ## DEPENDENCIES

        ## PACKAGE
        cd $SIGPI_SOURCE
        sudo apt-get install -y gqrx-sdr

        ### Add Menu icon
        sudo cp $SIGPI_ICONS/gqrx-sdr.png $DESKTOP_ICONS
        ### Add Desktop links
        sudo cp $SIGPI_HOME/desktop/gqrx-sdr.desktop $DESKTOP_FILES
	    # Add SigPi Category installed application
	    sudo sed -i "s/Categories.*/Categories=$SIGPI_MENU_CATEGORY;/" $DESKTOP_FILES/gqrx-sdr.desktop

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   GQRX Installed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac
