#!/bin/bash

###
### SIGpi
###
### pkg_hamlib
###
###

case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove Hamlib"
        echo -e "${SIGPI_BANNER_RESET}"
	    
        cd $SIGPI_SOURCE/hamlib-4.4/build
        sudo make uninstall
        sudo ldconfig
        rm -rf $SIGPI_SOURCE/hamlib-4.4
        sed -i /hamlib/d $SIGPI_CONFIG

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Hamlib Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge Hamlib"
        echo -e "${SIGPI_BANNER_RESET}"
        
        cd $SIGPI_SOURCE/hamlib-4.4/build
        sudo make uninstall
        sudo ldconfig
        rm -rf $SIGPI_SOURCE/hamlib-4.4
        sed -i /hamlib/d $SIGPI_CONFIG

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Hamlib Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install Hamlib"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"
        
        wget https://github.com/Hamlib/Hamlib/releases/download/4.4/hamlib-4.4.tar.gz -P $HOME/Downloads
        tar -zxvf $HOME/Downloads/hamlib-4.4.tar.gz -C $SIGPI_SOURCE
        cd $SIGPI_SOURCE/hamlib-4.4
        ./configure
        make
        sudo make install
        sudo ldconfig
        echo "hamlib" >> $SIGPI_CONFIG 
        
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Hamlib Installed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac
