#!/bin/bash

###
### SIGPI
###
### pkg_aptdec
###

case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove APTdec"
        echo -e "${SIGPI_BANNER_RESET}"

        cd $SIGPI_SOURCE/aptdec/build
        sudo make uninstall
        cd $SIGPI_SOURCE
        rm -rf $SIGPI_SOURCE/aptdec
        sed -i /aptdec/d $SIGPI_CONFIG

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   APTdec Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge APTdec"
        echo -e "${SIGPI_BANNER_RESET}"

        cd $SIGPI_SOURCE/aptdec/build
        sudo make uninstall
        cd $SIGPI_SOURCE
        rm -rf $SIGPI_SOURCE/aptdec
        sed -i /aptdec/d $SIGPI_CONFIG
        sudo rm -rf $SIGPI_DESKTOP/aptdec.desktop
        sudo rm -rf $DESKTOP_FILES/aptdec.desktop
                
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   APTdec Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install APTdec"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"

        ## DEPENDENCIES
        sudo apt-get install -y libsndfile-dev libpng-dev
        
        ## PACKAGE
        cd $SIGPI_SOURCE
        git clone https://github.com/srcejon/aptdec.git
        cd aptdec
        mkdir build; cd build
        cmake ..
        make -j4
        sudo make install
        sudo ldconfig

        ## DESKTOP
        # Add Icon
        # Add Desktop
        sudo cp $SIGPI_HOME/desktop/aptdec.desktop $DESKTOP_FILES
        # Change Category
        # Add to Menu
        xdg-desktop-menu install --novendor --noupdate $DESKTOP_DIRECTORY/SigPishell.directory $DESKTOP_FILES/aptdec.desktop

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   APTdec Installed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac
