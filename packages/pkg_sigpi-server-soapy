#!/bin/bash

###
### SIGPI
###
### pkg_soapysdr-server
###

case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove SigPi Server Soapy Service"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo systemctl stop sigpi-server-soapy.service
        sleep 5
        sudo systemctl disable sigpi-server-soapy.service
        sudo rm -rf /etc/systemd/system/sigpi-server-soapy.service
        
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   SigPi Server Soapy Service Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge SigPi Server Soapy Service"
        echo -e "${SIGPI_BANNER_RESET}"

        sudo systemctl stop sigpi-server-soapy.service
        sleep 5
        sudo systemctl disable sigpi-server-soapy.service
        sudo rm -rf /etc/systemd/system/sigpi-server-soapy.service

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   SigPi Server Soapy Service Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install SigPi Server Soapy Service"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"

        # RTLSDR
        ## DEPENDENCIES
        sudo apt-get install -y libusb-1.0-0-dev
        sudo pip3 install pyrtlsdr
        # INSTALL
        cd $SIGPI_SOURCE
        git clone https://github.com/osmocom/rtl-sdr.git
        cd rtl-sdr
        mkdir build	&& cd build
        cmake ../ -DINSTALL_UDEV_RULES=ON -DDETACH_KERNEL_DRIVER=ON
        make
        sudo make install
        sudo cp ../rtl-sdr.rules /etc/udev/rules.d/
        sudo ldconfig

        # SoapySDR
        ## DEPENDENCIES
        sudo apt-get install -y swig
        sudo apt-get install -y avahi-daemon
        sudo apt-get install -y libavahi-client-dev
        sudo apt-get install -y libusb-1.0-0-dev
        sudo apt-get install -y python-dev python3-dev

        ## INSTALL
        cd $SIGPI_SOURCE
        git clone https://github.com/pothosware/SoapySDR.git
        cd SoapySDR
        mkdir build && cd build
        cmake ../ -Wno-dev -DCMAKE_BUILD_TYPE=Release
        make -j4
        sudo make install
        sudo ldconfig
        SoapySDRUtil --info

        # SoapyRTLSDR
        ## INSTALL
        cd $SIGPI_SOURCE
        git clone https://github.com/pothosware/SoapyRTLSDR.git
        cd SoapyRTLSDR
        mkdir build && cd build
        cmake .. -Wno-dev -DCMAKE_BUILD_TYPE=Release
        make
        sudo make install
        sudo ldconfig

        # SigPi Server Soapy
        ## INSTALL
        cd $SIGPI_SOURCE
        git clone https://github.com/pothosware/SigPi Server Soapy.git
        cd SigPi Server Soapy
        mkdir build && cd build
        cmake .. -Wno-dev
        make
        sudo make install
        sudo ldconfig
         echo "SoapySDR" >> $SIGPI_CONFIG
   
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   SigPi Server Soapy Service Installed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac
